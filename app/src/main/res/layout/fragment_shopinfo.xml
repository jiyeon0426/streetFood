<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/child_fragment1"
    tools:context=".ShopinfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_c"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="상호명"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/jalnan"/>

            <TextView
                android:id="@+id/info_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:background="@drawable/round_c"
                android:fontFamily="@font/jalnan"
                android:hint="  상호명"
                android:padding="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_c"
                android:fontFamily="@font/jalnan"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="영업시간"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/info_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/round_c"
                android:fontFamily="@font/jalnan"
                android:hint="  영업시간"
                android:padding="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_c"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="가격정보"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/jalnan"/>

            <TextView
                android:id="@+id/info_price"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_c"
                android:fontFamily="@font/jalnan"
                android:layout_gravity="center"
                android:hint="  가격정보"
                android:padding="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_c"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="카테고리"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/jalnan"/>

            <TextView
                android:id="@+id/info_catagory"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_c"
                android:hint="  카테고리"
                android:padding="5dp"
                android:fontFamily="@font/jalnan"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_c"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="위치"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/jalnan"/>

            <TextView
                android:id="@+id/info_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/round_c"
                android:fontFamily="@font/jalnan"
                android:hint="  위치"
                android:padding="5dp"
                android:maxLines="2"
                android:singleLine="false"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_c"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="그외정보"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/jalnan"/>

            <TextView
                android:id="@+id/info_info"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@drawable/round_c"
                android:hint="  그외정보"
                android:fontFamily="@font/jalnan"
                android:layout_gravity="center"/>
        </LinearLayout>


    </LinearLayout>


</FrameLayout>